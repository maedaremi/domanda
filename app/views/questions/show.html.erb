<div class="question-show-wrapper">
  <div class="conrainer">
    <div class="row">
    　<div class="question-details">
      　<div class="col-md-6 col-md-offset-3">
          <div class="question-index-single">
            <p class="question-author">
              <%= @question.user.name %>
            </p>
            <p class= "question-category">
              <%= @question.category.category %>
            </p>
            <div class= "question-text">
              <%= simple_format(@question.question) %>
            </div>
            <div class = "answer-button">
              <%= link_to new_answer_path(question_id: @question.id), method: :get do %>
              <%= image_tag 'icons/comment.png',class: 'question-index-icon' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <% @question.answers.each do |a| %>
      <div class="row">
       <div class="col-md-6 col-md-offset-3">
        <div class="question-answer">
         <p class="answer-author">
          <%= a.user.name %>
         </p>
         <div class="answer-text">
          <%= simple_format(a.answer) %>
         </div>
        </div>
       </div>
      </div>
    <% end %>
  </div>