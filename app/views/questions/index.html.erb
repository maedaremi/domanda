<div class="question-index-wrapper">
  <div class="container">
    <% @question.each do |question| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="question-index-single">
            <h2 class="question-author">
              <%= question.user.name %>
            </h2>
            <%= question.categories.each do |question_category| %>
            <p class= "question-category">
              <%= question_category.category.category %>
            </p>
            <% end %>
            <p class= "question-text">
              <%= question.question %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>