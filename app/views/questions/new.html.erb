<div class="question-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :question_categories do |f| %>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.collection_select :id, Category.all, :id, :category %>
          </div>
          <% end %>
          <%= form_for @question do |f| %>
          <div class="form-group">
            <%= f.text_area :question,:size=>"60x20", class: "form-control"  %>
          </div>
          
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          
          <% end %>
      </div>
    </div>
  </div>
</div>